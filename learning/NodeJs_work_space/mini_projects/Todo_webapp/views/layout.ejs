<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%-style%>
    <title>
        <%=locals.title%>
    </title>
</head>
<body>
    <%- include('partials/_header'); %>
    <main id="layout_body">
        <%- body %>
    </main>
    <%- include('partials/_footer'); %>
    <%-script%> 
    <script>
        <% if(flash.success &&  flash.success.length>0){ %>
            new Noty({
                theme:'metroui',
                text: "<%=flash.success%>",
                type: 'success',
                layout: 'topRight',
                timeout: 1000
            }).show();
        <% }%>
        <% if(flash.error &&  flash.error.length>0){ %>
            new Noty({
                theme:'metroui',
                text: "<%=flash.error%>",
                type: 'error',
                layout: 'topRight',
                timeout: 1000
            }).show();
        <% }%>
    </script>
</body>
</html>